//Factorial of a number using recursion

#include <iostream>

using namespace std;

int factorial(int no)
{
    if(no==0)
    {
        return 1;
    }
      return no* factorial(no-1);
}
int main()
{
   int no;
   printf("Enter the number\n");
   scanf("%d",&no);
   
   int ans=factorial(no);
   printf("ans=%d",ans);

    return 0;
}
